<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmput301W12.android.project"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />
<!-- 		Get camera permissions -->
    <uses-permission android:name="android.permission.CAMERA"/>
<!--     	This will be where the hardware permissions for the camera go, i.e auto-focus -->
<!-- 		Get access for storing our database and photos -->
		<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".view.ProjectTwoActivity" android:launchMode="standard">
            <intent-filter >
<!-- 			Declare this as the main activity -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.TakeAPhotoActivity"></activity>
        <activity android:name=".PhotoListActivity"></activity>
        <activity android:name="ViewContainerListActivity"></activity>
        <activity android:name="CreateContainerActivity"></activity>
    </application>

</manifest>

